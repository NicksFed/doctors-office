@{
  Layout = "_Layout";
}

@using DoctorsOffice.Models;

<h2>Specialties</h2>

@if (@Model.Count == 0)
{
  <h3>No specialties have been added yet!</h3>
}

<ul>
@foreach (Specialty specialty in Model)
{
  <li>@Html.ActionLink($"{specialty.Name}", "Details", new { id = specialty.SpecialtyId})</li>
}
</ul>

<a href='@Url.Action("Create")'>
  <button class="green">Add New Specialty</button>
</a>
<a href='@Url.Action("Index", "Home")'>
  <button>Home</button>
</a>
