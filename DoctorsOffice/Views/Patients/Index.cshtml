@{
  Layout = "_Layout";
}

@using DoctorsOffice.Models;

<h2>All Patients</h2>
<hr />

@if (@Model.Count == 0)
{
  <h2>No patients have been added yet!</h2>
} 
else
{
  <ul class="patient-list">
    @foreach (Patient patient in Model)
    {
      <li>
        <div>@patient.Name</div>
        <div>Doctor: @patient.Doctor.Name</div>
        <a href='@Url.Action("Details", new { id = patient.PatientId })'>
          <button>View Details</button>
        </a>
      </li>
    }
  </ul>
}

<a href='@Url.Action("Create")'>
  <button class="green">Add New Patient</button>
</a>
<a href='@Url.Action("Index", "Home")'>
  <button>Home</button>
</a>