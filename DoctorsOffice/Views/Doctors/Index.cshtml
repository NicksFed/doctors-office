@{
  Layout = "_Layout";
}

@using DoctorsOffice.Models;

<h2>All Doctors</h2>
<hr />

@if (@Model.Count == 0)
{
  <h3>No doctors have been added yet!</h3>
} 

<ul>
  @foreach(Doctor doctor in Model)
  {
    <li>
      <div>@doctor.Name</div>
      <a href='@Url.Action("Details", new { id = doctor.DoctorId })'>
        <button>View Details</button>
      </a>
    </li>
  }
</ul>

<a href='@Url.Action("Create")'>
  <button class="green">Add New Doctor</button>
</a>
<a href='@Url.Action("Create", "Patients")'>
  <button class="green">Add New Patient</button>
</a>
<a href='@Url.Action("Index", "Home")'>
  <button>Home</button>
</a>